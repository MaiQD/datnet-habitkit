@implements IDisposable
@using Microsoft.Extensions.Localization
@using HabitKitClone.Resources
@inject NavigationManager NavigationManager
@inject IStringLocalizer<SharedResource> Localizer

<div class="navbar">
    <div class="navbar-brand">
        <a href="">HabitKit</a>
    </div>
    <input type="checkbox" id="navbar-toggle" class="navbar-toggle" />
    <label for="navbar-toggle" class="navbar-toggle-label">
        <span></span>
        <span></span>
        <span></span>
    </label>
    <nav class="navbar-nav">
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
            <i class="fas fa-home"></i> @Localizer["Habits"]
        </NavLink>
        <NavLink class="nav-link" href="habit-tracker">
            <i class="fas fa-mobile-alt"></i> Mobile Tracker
        </NavLink>
        <NavLink class="nav-link" href="calendar">
            <i class="fas fa-calendar"></i> @Localizer["Calendar"]
        </NavLink>
        <NavLink class="nav-link" href="statistics">
            <i class="fas fa-chart-line"></i> @Localizer["Statistics"]
        </NavLink>
        <NavLink class="nav-link" href="settings">
            <i class="fas fa-cog"></i> @Localizer["Settings"]
        </NavLink>

        <AuthorizeView>
            <Authorized>
                <NavLink class="nav-link" href="Account/Manage">
                    <i class="fas fa-user"></i> @context.User.Identity?.Name
                </NavLink>
                <form action="Account/Logout" method="post" class="nav-form">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <button type="submit" class="nav-link nav-button">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </Authorized>
            <NotAuthorized>
                <NavLink class="nav-link" href="Account/Register">
                    <i class="fas fa-user-plus"></i> Register
                </NavLink>
                <NavLink class="nav-link" href="Account/Login">
                    <i class="fas fa-sign-in-alt"></i> Login
                </NavLink>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

